// Pantalla de ACCESO ESPECÍFICO POR PACIENTE
function AccesoSpecificoScreen() {
  const { id } = useParams();
  const [contrasena, setContrasena] = useState('');
  const [error, setError] = useState('');
  const navigate = useNavigate();

  const interno = INTERNOS_DATA.find(item => item.id === id);

  const handleAcceso = () => {
    // Contraseña temporal: "paciente" + ID (ej: "paciente001")
    const contrasenaCorrecta = `paciente${id.split('-')[1]}`;

    if (contrasena === contrasenaCorrecta) {
      setError('');
      navigate(`/familias/info/${id}`);
    } else {
      setError('Contraseña incorrecta para este paciente');
    }
  };

  return (
    <div className="container">
      <h1 className="screen-title">🔒 ACCESO A INFORMACIÓN</h1>

      <div className="login-card">
        <h2 className="login-title">Acceso a: {interno.nombre}</h2>
        <p className="login-subtitle">Ingresa la contraseña específica para este familiar</p>
          
        <label className="login-label">Contraseña:</label>
        <input
          type="password"
          className="input"
          placeholder="Contraseña del paciente"
          value={contrasena}
          onChange={(e) => setContrasena(e.target.value)}
        />
          
        {error && <p className="error-text">{error}</p>}
          
        <button className="login-button" onClick={handleAcceso}>
          Ver Información
        </button>
      </div>
    </div>
  );
}

